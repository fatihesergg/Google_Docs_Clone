@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Google Docs Clone";
}
@model List<Document>
    @if(Model.Count > 0)
        {
        <p id="search_term">Search term: "@ViewData["query"]"</p>
            <div class="flex-container">
        @foreach(var doc in Model)
        {
                <a asp-controller="Document" asp-action="Details" asp-route-id="@doc.DocumentID">
                <div class="outer">
                    <div class="inner">
                        <p>@doc.Title</p>
                    </div>
                </div>
            </a>
         }
    </div>
        }
     else{
         <div class="not_found">
             <div>
                <h4>Search term:"@ViewData["query"]"</h4>
                <p>We can't find any result...</p>
             </div>
         </div>
     }
